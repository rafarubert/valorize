<%#= render :partial => "/shared/content_page" %>
<% content_for :index_info do %>
<div id="index_info">
	<% @index_infos.each do |item| %>
	<div class="column">
		<h3><%= item.title %></h3>
		<p>
			  <%= raw truncate(strip_tags(item.body), :length => 220, :omission => link_to( '...', blog_post_url(item))) %>
		</p>
	</div>
	<% end %>

</div>
<% end -%>
<div id="content">
	<div class="column">
		<%= render :partial => "pages/notices" -%>
	</div>
	<div class="column center">
